- capture
  h6 =(title || (attr :name).capitalize)
  = html_tag_if !blocks?, :p
    =content
- if admonition_aside?
  aside.admonitionblock id=id class=[(attr :name), role] role=admonition_aria
    - yield_capture
- else
  section.admonitionblock id=id class=[(attr :name), role] role=admonition_aria
    - yield_capture
